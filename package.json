{
  "name": "demo-eleventy-from-scratch-blog",
  "version": "1.0.0",
  "description": "Companion code to the “6 Minutes to Build a Blog from Scratch” tutorial.",
  "scripts": {
    "watch:sass": "sass --watch _src/sass:_site/css",
    "build:sass": "sass _src/sass:_site/css",
    "watch:eleventy": "eleventy --serve",
    "build:eleventy": "eleventy",
    "start": "npm-run-all build:sass --parallel watch:*",
    "build": "npm-run-all build:*"
  },
  "license": "MIT",
  "dependencies": {
    "@11ty/eleventy": "^2.0.1"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "sass": "^1.83.4"
  }
}
